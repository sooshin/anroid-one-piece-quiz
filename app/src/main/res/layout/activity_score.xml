<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.onepiecequiz.ScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/your_score"
            android:textColor="@color/color_question"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/score_circle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="100sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q_one"
                    style="@style/ScoreResultTextStyle"
                    android:layout_marginTop="30dp"
                    android:gravity="end"
                    tools:text="Q1 :" />

                <TextView
                    android:id="@+id/q_two"
                    style="@style/ScoreResultTextStyle"
                    android:gravity="end"
                    tools:text="Q2 :" />

                <TextView
                    android:id="@+id/q_three"
                    style="@style/ScoreResultTextStyle"
                    android:gravity="end"
                    tools:text="Q3 :" />

                <TextView
                    android:id="@+id/q_four"
                    style="@style/ScoreResultTextStyle"
                    android:gravity="end"
                    tools:text="Q4 :" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="26dp"
                android:background="@android:color/darker_gray">

            </View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q_five"
                    style="@style/ScoreResultTextStyle"
                    android:layout_marginTop="30dp"
                    tools:text="Q5 :" />

                <TextView
                    android:id="@+id/q_six"
                    style="@style/ScoreResultTextStyle"
                    tools:text="Q6 :" />

                <TextView
                    android:id="@+id/q_seven"
                    style="@style/ScoreResultTextStyle"
                    tools:text="Q7 :" />

                <TextView
                    android:id="@+id/q_eight"
                    style="@style/ScoreResultTextStyle"
                    tools:text="Q8 :" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/back_to_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="30dp"
            android:text="@string/button_back" />
    </LinearLayout>

</ScrollView>
